<div class="loading-container">
    <div class="loading"></div>
    <div class="checkmark-container">
      <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="checkmark-circle" cx="26" cy="26" r="23.5" fill="none"/>
        <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16"/>
      </svg>
    </div>
    <p class="message">Transaction processing, please wait...</p>
  </div>
  
  <script>
    setTimeout(function() {
      document.querySelector('.loading').style.display = 'none';
      document.querySelector('.checkmark-container').style.display = 'block';
      
      document.querySelector('.message').textContent = 'Transaction successful, redirecting...';
      
      setTimeout(function() {
        window.location.href = '/listing';
      }, 2000);
    }, 2000);
  </script>
  